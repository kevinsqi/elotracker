<div class="header">
  <h1><%= @league.name %></h1>
  <div class="description">
    <%= @league.description %> |
    <%= @league.is_public ? 'Public' : 'Private' %> |
    <%= @league.is_completed ? 'Complete' : 'Ongoing' %> |
    <%= link_to 'Edit League Settings', edit_league_path(@league) %>
  </div>
</div>

<div id="main-content">
  <%# TODO this shouldn't be rendered if blank? %>
  <p id="notice"><%= notice %></p>

  <div class="section">
    <h2>New match</h2>
    <div class="content">
    </div>
  </div>

  <div class="section">
    <h2>Recent matches</h2>
    <div class="content">
      <% if @league.matches.empty? %>
        No matches have been submitted yet.
      <% else %>
        <% @league.matches.each do |match| %>
          <%= match.inspect %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<div id="sidebar">
  <h2>Rankings</h2>
  <ol>
    <% if @league.players.empty? %>
      No players have been added yet.
      <%= link_to 'Add them now', edit_league_path %>.
    <% else %>
      <% @league.players.each do |player| %>
        <li>
          <%= player.name %>, <%= player.player_rating.rating %>
        </li>
      <% end %>
    <% end %>
  </ol>
</div>


